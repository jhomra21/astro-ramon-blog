---
import TransitionLayout from "../layouts/TransitionLayout.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Tooltip from "@/components/Tooltip";
import { TextScrambleShimmer } from "@/components/motion-ui/textscrambleshimmer";
---

<TransitionLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
	<div class="space-y-12">
		<!-- Hero section -->
		<div class="border-l-2 border-zinc-700 pl-4 dark:border-zinc-300 bg-white dark:bg-zinc-800 p-6 shadow-sm">
			<div class="flex items-center gap-2 mb-4">
				<span class="text-4xl">üë®‚ÄçüöÄ</span>
				<TextScrambleShimmer 
					text="Hello, Visitor!"
					className="text-4xl text-zinc-900 dark:text-zinc-100 font-mono tracking-tight"
					scrambleDuration={1.6}
					shimmerDuration={5}
					client:load 
				/>
			</div>

			<p class="font-mono tracking-tight mb-2">Welcome, my name is Juan Martinez.</p>
			<p class="font-mono tracking-tight text-zinc-700 dark:text-zinc-300 mb-4">
				I'm a software developer specializing in modern web development and robust infrastructure. 
				I focus on creating exceptional user experiences while ensuring scalable and maintainable solutions.
			</p>

			<div class="flex items-center gap-4 mb-6">
				<a href="/about" class="bg-zinc-100 dark:bg-zinc-700 px-4 py-2 inline-flex items-center gap-2 hover:text-primary border border-zinc-200 dark:border-zinc-600 hover:border-l-emerald-500 hover:border-l-4">
					Learn More About Me
					<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
				</a>
			</div>

			<p class="flex items-center gap-2 font-mono tracking-tight text-zinc-700 dark:text-zinc-300">
				This site was built with <a href="https://astro.build/" class="link-hover">
					<Tooltip
						triggerText="Astro"
						tooltipContent="Link to Astro's site"
						client:load
					/>
				</a>
				üöÄ
			</p>
		</div>

		<!-- Projects Section -->
		<div class="space-y-8">
			<h2 class="section-title">Featured Projects</h2>

			<!-- Latest Project Preview -->
			<div class="project-card latest-project bg-white dark:bg-zinc-800 border border-zinc-200 dark:border-zinc-700 p-6 shadow-sm">
				<div class="relative z-10">
					<div class="flex items-center justify-between flex-wrap gap-2 mb-4">
						<div class="flex items-center gap-2">
							<span class="badge bg-blue-50 dark:bg-blue-900/20 text-blue-700 dark:text-blue-300 border-blue-200 dark:border-blue-800">Latest Project</span>
							<span class="badge bg-zinc-100 dark:bg-zinc-800">2024</span>
						</div>
						<span class="badge bg-zinc-100 dark:bg-zinc-800 flex items-center gap-1.5">
							<span class="relative flex h-2 w-2">
								<span class="animate-ping absolute inline-flex h-full w-full bg-green-400 opacity-75"></span>
								<span class="relative inline-flex h-2 w-2 bg-green-500"></span>
							</span>
							LIVE
						</span>
					</div>
					<a href="https://fastaiphotos.com/" class="link-hover">
						<h2 class="text-2xl font-bold mb-2 tracking-tight">FastAIPhotos.com</h2>
					</a>
					<p class="text-zinc-700 dark:text-zinc-300 mb-4 tracking-tight">
						A modern web application built with SolidJS, Hono, Fal.ai and Together AI
					</p>
					<div class="flex flex-wrap gap-2">
						<span class="badge bg-zinc-100 dark:bg-zinc-800" data-tech="solid">Solid.js</span>
						<span class="badge bg-zinc-100 dark:bg-zinc-800" data-tech="hono">Hono.js</span>
						<span class="badge bg-zinc-100 dark:bg-zinc-800" data-tech="falai">Fal.ai</span>
						<span class="badge bg-zinc-100 dark:bg-zinc-800" data-tech="together">Together AI</span>
						<span class="badge bg-zinc-100 dark:bg-zinc-800" data-tech="cloudflare">Cloudflare</span>
						<span class="badge bg-zinc-100 dark:bg-zinc-800" data-tech="supabase">Supabase</span>
					</div>
					<div class="flex flex-wrap items-center gap-4 mt-4">
						<a href="https://fastaiphotos.com/" target="_blank" class="link-hover inline-flex items-center gap-2">
							Live Site
							<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
						</a>
						<a href="/blog/fastaiphotos" class="link-hover inline-flex items-center gap-2">
							Read More
							<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4"><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"/></svg>
						</a>
					</div>
				</div>
			</div>

			<!-- ISS Tracker Project -->
			<div class="project-card featured-project bg-white dark:bg-zinc-800 border border-zinc-200 dark:border-zinc-700 p-6 shadow-sm">
				<div class="relative z-10">
					<div class="flex items-center justify-between flex-wrap gap-2 mb-4">
						<div class="flex items-center gap-2">
							<span class="badge bg-indigo-50 dark:bg-indigo-900/20 text-indigo-700 dark:text-indigo-300 border-indigo-200 dark:border-indigo-800">Featured Project</span>
							<span class="badge bg-zinc-100 dark:bg-zinc-800">2024</span>
						</div>
						<span class="badge bg-zinc-100 dark:bg-zinc-800 flex items-center gap-1.5">
							<span class="relative flex h-2 w-2">
								<span class="animate-ping absolute inline-flex h-full w-full bg-green-400 opacity-75"></span>
								<span class="relative inline-flex h-2 w-2 bg-green-500"></span>
							</span>
							LIVE
						</span>
					</div>
					<a href="https://3d-globe-iss-tracker.pages.dev/" class="link-hover">
						<h2 class="text-2xl font-bold mb-2 tracking-tight">3D Globe ISS Tracker</h2>
					</a>
					<p class="text-zinc-700 dark:text-zinc-300 mb-4 tracking-tight">
						Real-time ISS tracking with an interactive 3D globe visualization, built with modern web technologies
					</p>
					<div class="flex flex-wrap gap-2">
						<span class="badge bg-zinc-100 dark:bg-zinc-800" data-tech="solid">Solid.js</span>
						<span class="badge bg-zinc-100 dark:bg-zinc-800" data-tech="three">Three.js</span>
						<span class="badge bg-zinc-100 dark:bg-zinc-800" data-tech="d3">D3.js</span>
						<span class="badge bg-zinc-100 dark:bg-zinc-800" data-tech="webgl">WebGL</span>
						<span class="badge bg-zinc-100 dark:bg-zinc-800">Real-time</span>
						<span class="badge bg-zinc-100 dark:bg-zinc-800" data-tech="cloudflare">Cloudflare</span>
					</div>
					<div class="flex flex-wrap items-center gap-4 mt-4">
						<a href="https://3d-globe-iss-tracker.pages.dev/" target="_blank" class="link-hover inline-flex items-center gap-2">
								Live Demo
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
						</a>
						<a href="/blog/3d-globe-iss" class="link-hover inline-flex items-center gap-2">
							Read More
							<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4"><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"/></svg>
						</a>
					</div>
				</div>
			</div>
		</div>

		<!-- Quick Links -->
		<div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
			<div class="project-card about-card bg-white dark:bg-zinc-800 border border-zinc-200 dark:border-zinc-700 p-6 shadow-sm">
				<h3 class="text-lg font-semibold mb-2 tracking-tight">About Me</h3>
				<p class="text-zinc-700 dark:text-zinc-300 mb-4 tracking-tight">Learn more about my background, skills, and experience.</p>
				<a href="/about" class="link-hover inline-flex items-center gap-2">
					View Profile
					<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
				</a>
			</div>

			<div class="project-card github-card bg-white dark:bg-zinc-800 border border-zinc-200 dark:border-zinc-700 p-6 shadow-sm">
				<h3 class="text-lg font-semibold mb-2 tracking-tight">GitHub</h3>
				<p class="text-zinc-700 dark:text-zinc-300 mb-4 tracking-tight">Check out my GitHub.</p>
				<a href="https://github.com/jhomra21" target="_blank" class="link-hover inline-flex items-center gap-2">
					View Profile
					<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
				</a>
			</div>
		</div>
	</div>
</TransitionLayout>

<style>
	.project-card {
		transition: all 0.2s ease;
		border-left: 4px solid transparent;
	}
	.project-card:hover {
		border-left-color: #2563eb;
	}
	.latest-project:hover {
		border-left-color: #3b82f6;
	}
	.featured-project:hover {
		border-left-color: #6366f1;
	}
	.about-card:hover {
		border-left-color: #10b981;
	}
	.github-card:hover {
		border-left-color: #6b7280;
	}
	.badge {
		border-radius: 0;
		padding: 0.25rem 0.75rem;
		font-family: 'JetBrains Mono', monospace;
		transition: all 0.2s ease;
		border: 1px solid #e5e7eb;
	}
	/* Solid.js brand hover */
	.badge[data-tech="solid"]:hover {
		background: #2C4F7C;
		color: white;
		border-color: #2C4F7C;
	}
	/* Hono brand hover */
	.badge[data-tech="hono"]:hover {
		background: #E26A3D;
		color: white;
		border-color: #E26A3D;
	}
	/* Three.js brand hover */
	.badge[data-tech="three"]:hover {
		background: #000000;
		color: white;
		border-color: #000000;
	}
	/* D3.js brand hover */
	.badge[data-tech="d3"]:hover {
		background: #F9A03C;
		color: white;
		border-color: #F9A03C;
	}
	/* WebGL brand hover */
	.badge[data-tech="webgl"]:hover {
		background: #990000;
		color: white;
		border-color: #990000;
	}
	/* Cloudflare brand hover */
	.badge[data-tech="cloudflare"]:hover {
		background: #F6821F;
		color: white;
		border-color: #F6821F;
	}
	/* Supabase brand hover */
	.badge[data-tech="supabase"]:hover {
		background: #3ECF8E;
		color: white;
		border-color: #3ECF8E;
	}
	/* Fal.ai brand hover */
	.badge[data-tech="falai"]:hover {
		background: #7C3AED;
		color: white;
		border-color: #7C3AED;
	}
	/* Together AI brand hover */
	.badge[data-tech="together"]:hover {
		background: #4F46E5;
		color: white;
		border-color: #4F46E5;
	}
	.badge:hover {
		background: #2563eb;
		color: white;
	}
	.link-hover {
		transition: all 0.2s ease;
		border-bottom: 1px solid transparent;
	}
	.link-hover:hover {
		border-bottom: 1px solid currentColor;
		padding-bottom: 2px;
	}
	.section-title {
		font-size: 1.5rem;
		font-weight: 600;
		margin-bottom: 1rem;
		padding-bottom: 0.5rem;
		border-bottom: 2px solid #e5e7eb;
	}
</style>
