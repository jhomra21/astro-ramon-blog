---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Tooltip from "@/components/Tooltip";
import { Card } from "@/components/ui/card";
import { TextScrambleShimmer } from "@/components/motion-ui/textscrambleshimmer";
import { Badge } from "@/components/ui/badge";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<div class="p-6 max-w-4xl mx-auto space-y-12">
				<!-- Existing hero section -->
				<div>
					<div class="flex items-center gap-2 mb-4">
						<span class="text-4xl">üë®‚ÄçüöÄ</span>
						<TextScrambleShimmer 
							text="Hello, Visitor!"
							className="text-4xl text-zinc-900 dark:text-zinc-100"
							scrambleDuration={1.6}
							shimmerDuration={5}
							client:load 
						/>
					</div>

					<p>Welcome, <a href="/about" class="text-primary hover:underline">my name is Juan Martinez.</a></p>
					<p>
						I'm a software developer, with a passion for web development
						and robust infrastructure.
					</p>

					<p class="flex items-center gap-2">
						This site was built with <a href="https://astro.build/">
							<Tooltip
								triggerText="Astro"
								tooltipContent="Link to Astro's site"
								client:load
							/>
						</a>
						üöÄ
					</p>
				</div>

				<!-- Latest Project Preview -->
				<Card className="p-6 relative glass-card transform transition-all duration-300 ease-out hover:translate-y-[-2px] bg-blue-100 backdrop-blur-sm hover:bg-blue-200/50 hover:border-white/20">
					<div class="relative z-10">
						<div class="flex items-center justify-between mb-4">
							<div class="flex items-center gap-2">
								<Badge variant="default" className="bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 text-white font-medium px-4 py-1 shadow-lg hover:shadow-xl transition-all duration-300">
									Latest Project
								</Badge>
								<Badge variant="outline">2024</Badge>
							</div>
							<Badge variant="outline" className="flex items-center gap-1.5">
								<a 
									href="https://realtime-live-image-gen.pages.dev/" 
									target="_blank" 
									class="inline-flex items-center gap-2 hover:text-white transition-colors"
								>
									<span class="relative flex h-2 w-2">
										<span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
										<span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
									</span>
									LIVE
								</a>
							</Badge>
						</div>
						<h2 class="text-2xl font-bold mb-2">Real-time AI Image Generation</h2>
						<p class="text-muted-foreground mb-4">
							A modern web application built with SolidJS, Hono, Fal.ai and Together AI
						</p>
						<div class="flex flex-wrap gap-2">
							<Badge variant="secondary">SolidJS</Badge>
							<Badge variant="secondary">Hono</Badge>
							<Badge variant="secondary">Fal.ai</Badge>
							<Badge variant="secondary">Together AI</Badge>
							<Badge variant="outline">Cloudflare</Badge>
						</div>
						<div class="flex gap-4 mt-4">
							<a 
								href="https://realtime-live-image-gen.pages.dev/" 
								target="_blank" 
								class="inline-flex items-center gap-2 hover:text-primary transition-colors"
							>
								<Tooltip triggerText="View Live Demo" tooltipContent="Try it out live" client:load/>
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
							</a>
							<a 
								href="https://github.com/jhomra21/realtime-live-image-gen" 
								target="_blank" 
								class="inline-flex items-center gap-2 hover:text-primary transition-colors"
							>
								<Tooltip triggerText="View Source Code" tooltipContent="View source code" client:load/>
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>

							</a>
						</div>
					</div>
				</Card>

				<!-- Quick Links -->
				<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
					<Card className="p-6 transform transition-all duration-300 ease-out hover:translate-y-[-2px] hover:bg-white/5 hover:border-white/20 flex flex-col">
						<div class="flex-1">
							<h3 class="text-lg font-semibold mb-2">About Me</h3>
							<p class="text-muted-foreground mb-4">Learn more about my background, skills, and experience.</p>
						</div>
						<a href="/about" class="text-primary hover:underline mt-auto">View Profile ‚Üí</a>
					</Card>

					<Card className="p-6 transform transition-all duration-300 ease-out hover:translate-y-[-2px] hover:bg-white/5 hover:border-white/20 flex flex-col">
						<div class="flex-1">
							<h3 class="text-lg font-semibold mb-2">GitHub</h3>
							<p class="text-muted-foreground mb-4">Check out my GitHub.</p>
						</div>
						<a href="https://github.com/jhomra21" target="_blank" class="text-primary hover:underline mt-auto">View Profile ‚Üí</a>
					</Card>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>
