---
import TransitionLayout from "../layouts/TransitionLayout.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Tooltip from "@/components/Tooltip";
import { TextScrambleShimmer } from "@/components/motion-ui/textscrambleshimmer";
import ProjectsSection from "@/components/ProjectsSection.astro";
---

<TransitionLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
	<div class="max-w-[1120px] mx-auto px-4 py-16 space-y-16">
		<!-- Hero section -->
		<div class="border-l-2 border-zinc-700 dark:border-zinc-300 bg-white dark:bg-zinc-800 p-6 shadow-sm">
			<div class="flex items-center gap-2 mb-4">
				<span class="text-4xl">üë®‚ÄçüöÄ</span>
				<TextScrambleShimmer 
					text="Hello, Visitor!"
					className="text-4xl text-zinc-900 dark:text-zinc-100 font-mono tracking-tight"
					scrambleDuration={1.6}
					shimmerDuration={5}
					client:load 
				/>
			</div>

			<p class="font-mono tracking-tight mb-2">Welcome, my name is Juan Martinez.</p>
			<p class="font-mono tracking-tight text-zinc-700 dark:text-zinc-300 mb-4">
				I'm a software developer specializing in modern web development and robust infrastructure. 
				I focus on creating exceptional user experiences while ensuring scalable and maintainable solutions.
			</p>

			<div class="flex items-center gap-4 mb-2">
				<a href="/about" class="link-hover">
				<Tooltip 
					triggerText="Learn More About Me"
					tooltipContent="Link to article about me"
					variant="ghost"
					client:load
				/>
			</a>
			</div>
		</div>

		<!-- Projects Section -->
		<div class="space-y-8">
			<ProjectsSection maxProjects={5}/>
		</div>

		<!-- Quick Links -->
		<div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
			<div class="project-card about-card bg-white dark:bg-zinc-800 border border-zinc-200 dark:border-zinc-700 p-6 shadow-sm">
				<h3 class="text-lg font-semibold mb-2 tracking-tight">About Me</h3>
				<p class="text-zinc-700 dark:text-zinc-300 mb-4 tracking-tight">Learn more about my background, skills, and experience.</p>
				<a href="/about" class="link-hover inline-flex items-center gap-2">
					View Profile
					<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
				</a>
			</div>

			<div class="project-card github-card bg-white dark:bg-zinc-800 border border-zinc-200 dark:border-zinc-700 p-6 shadow-sm">
				<h3 class="text-lg font-semibold mb-2 tracking-tight">GitHub</h3>
				<p class="text-zinc-700 dark:text-zinc-300 mb-4 tracking-tight">Check out my GitHub.</p>
				<a href="https://github.com/jhomra21" target="_blank" class="link-hover inline-flex items-center gap-2">
					View Profile
					<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
				</a>
			</div>
		</div>
	</div>
</TransitionLayout>

<style>
	.project-card {
		transition: all 0.2s ease;
		border-left: 4px solid transparent;
	}
	.project-card:hover {
		border-left-color: #2563eb;
	}
	.latest-project:hover {
		border-left-color: #3b82f6;
	}
	.featured-project:hover {
		border-left-color: #6366f1;
	}
	.about-card:hover {
		border-left-color: #10b981;
	}
	.github-card:hover {
		border-left-color: #6b7280;
	}
	.badge {
		border-radius: 0;
		@apply px-2 py-1 text-xs font-mono tracking-tight;
	}

	.link-hover {
		@apply text-zinc-900 dark:text-zinc-100 border-b border-transparent hover:border-current transition-all duration-200;
	}

	.section-title {
		@apply text-2xl font-bold tracking-tight;
	}
</style>
