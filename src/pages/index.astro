---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Tooltip from "@/components/Tooltip";
import { Card } from "@/components/ui/card";
import { TextScrambleShimmer } from "@/components/motion-ui/textscrambleshimmer";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<div class="p-6 max-w-4xl mx-auto">
				<div class="flex items-center gap-2 mb-4">
					<span class="text-4xl">👨‍🚀</span>
					<TextScrambleShimmer 
						text="Hello, Visitor!"
						className="text-4xl text-zinc-900 dark:text-zinc-100"
						scrambleDuration={1.6}
						shimmerDuration={5}
						client:load 
					/>
				</div>

				<p>Welcome, <a href="/about" class="text-primary hover:underline">my name is Juan Martinez.</a></p>
				<p>
					I'm a software developer, with a passion for web development
					and robust infrastructure.
				</p>

				<p class="flex items-center gap-2">
					This site was built with <a href="https://astro.build/">
						<Tooltip
							triggerText="Astro"
							tooltipContent="Link to Astro's site"
							client:load
						/>
					</a>
					🚀
				</p>
			</div>
		</main>
		<Footer />
	</body>
</html>
