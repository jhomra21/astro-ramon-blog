---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import Image from 'astro/components/Image.astro';

const posts = (await getCollection('blog'))
	.filter(post => !post.slug.startsWith('about')) // Exclude about page
	.sort((a, b) => {
		// If no pubDate, use a default date or sort to the end
		const dateA = a.data.pubDate?.valueOf() ?? 0;
		const dateB = b.data.pubDate?.valueOf() ?? 0;
		return dateB - dateA;
	});
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			ul {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				margin-bottom: 2rem;
			}
			ul li a {
				display: block;
				text-decoration: none;
				transition: transform 0.2s ease;
			}
			ul li a:hover {
				transform: translateY(-2px);
			}
			.title {
				margin: 0.5rem 0;
				color: #444444;
				font-size: 1.5rem;
				font-weight: 600;
				line-height: 1.25;
			}
			.date {
				color: #666666;
				font-size: 0.9rem;
			}
			img {
				width: 100%;
				height: 200px;
				object-fit: cover;
				border-radius: 0.5rem;
				margin-bottom: 0.5rem;
			}
			@media (max-width: 720px) {
				ul {
					grid-template-columns: 1fr;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/planes/${post.slug}/`}>
									{post.data.heroImage && (
										<Image 
											loading="eager" 
											width={720} 
											height={360} 
											src={post.data.heroImage} 
											alt="" 
										/>
									)}
									<h4 class="title">{post.data.title}</h4>
									{post.data.pubDate && (
										<p class="date">
											<FormattedDate date={post.data.pubDate} />
										</p>
									)}
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
